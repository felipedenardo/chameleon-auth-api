      "name": "3. Login User (POST /login) & Get Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Salva o token JWT na vari√°vel de ambiente 'auth_token'",
              "var jsonData = pm.response.json();",
              "if (pm.response.code === 200 && jsonData.data && jsonData.data.token) {",
              "    pm.environment.set(\"auth_token\", jsonData.data.token);",
              "    console.log(\"Token salvo: \" + jsonData.data.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
